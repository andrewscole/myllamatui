.cssexportbutton {
    row-span: 1;
	column-span: 1;
    color:rgb(253, 254, 255);
    background: transparent;

}

.cssquestion_text {
    row-span: 1;
	column-span: 6;
    color:rgb(253, 254, 255);
    background: transparent;
}

.csssubmitbutton {
    row-span: 1;
	column-span: 1;
    color:rgb(253, 254, 255);
    background: transparent;

}
.cssquestion {
    padding: 0 1;
    offset: 15 0;
    background: $panel;
    text-align: right;
    align: right top;
    border: round rgb(0, 98, 255);
    content-align-horizontal: right;
    color:rgb(247, 247, 250);
    background: transparent;
    /*background:rgb(0, 25, 92);*/
}

.cssanswer {
    background: $panel;
    padding: 1 1;
    align: left top;
    border: round rgb(91, 33, 173);
    content-align-horizontal: right;
    color:rgb(247, 247, 250);
    background: transparent;
}

.cssdate {
    padding: 0 0;
    offset: 1 0;
    background: $panel;
    text-align: right;
    align: right top;
    content-align-horizontal: right;
    background: transparent;
}

.notifyloading {
    color:rgb(247, 247, 250);
    background: transparent;
}